<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech.todolist">

    <application
        android:name=".TodoApplication"
        android:allowBackup="false"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:roundIcon="${roundAppIcon}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.tododetails.TodoDetailsActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.todo.AddEditTodoActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.home.HomeActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>